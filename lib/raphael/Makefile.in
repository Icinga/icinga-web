prefix=@prefix@
exec_prefix=@exec_prefix@
LOGDIR=@localstatedir@
CFGDIR=@sysconfdir@
BINDIR=@bindir@
CGIDIR=@sbindir@
HTMLDIR=@datarootdir@

INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

install: installdirs
	$(INSTALL) -m 644 $(INSTALL_OPTS) "g.pie.js" $(DESTDIR)$(prefix)/lib/raphael/g.pie.js;
	$(INSTALL) -m 644 $(INSTALL_OPTS) "graphael.js" $(DESTDIR)$(prefix)/lib/raphael/graphael.js;
	$(INSTALL) -m 644 $(INSTALL_OPTS) "raphael.js" $(DESTDIR)$(prefix)/lib/raphael/raphael.js;

installdirs:
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(DESTDIR)$(prefix)/lib/raphael/
	@dirs=`find src -mindepth 1 -type d`; \
	for dir in $$dirs; do \
		$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(DESTDIR)$(prefix)/lib/raphael/"$$dir"; \
	done
