<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/AppKit/config/validators.xml"
>
    <ae:configuration>

        <validators>

        <validator class="number" name="logout_arg" required="false">
                <arguments>
                    <argument>logout</argument>
                </arguments>
                <errors>
                    <error>Something went wrong with the logout parameter!</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="max">1</ae:parameter>
                    <ae:parameter name="min">0</ae:parameter>
                </ae:parameters>
        </validator>

        <validator class="number" name="sendheader_arg" required="false">
                <arguments>
                    <argument>unauthorized</argument>
                </arguments>
                <errors>
                    <error>Something went wrong with the sendUnauthior parameter!</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="max">1</ae:parameter>
                    <ae:parameter name="min">0</ae:parameter>
                </ae:parameters>
        </validator>

        </validators>

    </ae:configuration>
</ae:configurations>
