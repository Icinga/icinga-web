			#loc: SERVICE_MAX_CHECK_ATTEMPTS
			#loc: SERVICE_LAST_CHECK
			#loc: SERVICE_CHECK_TYPE
			#loc: SERVICE_LATENCY
			#loc: SERVICE_EXECUTION_TIME
			#loc: SERVICE_NEXT_CHECK
			#loc: SERVICE_LAST_HARD_STATE_CHANGE
